@model List<ResultSpecialOfferDto>
@{
    int count = 0;
}
<div class="col-lg-4">

    @foreach (var item in Model)
    {
        count++;
        if (count == 1)
        {
            <div class="product-offer mb-30" style="height: 200px;">
                <img class="img-fluid" src="@item.ImageUrl" alt="">
                <div class="offer-text">
                    <h6 class="text-white text-uppercase">@item.Title</h6>
                    <h3 class="text-white mb-3">@item.SubTitle</h3>
                    <a href="" class="btn btn-primary">Alışverişe Başla</a>
                </div>
            </div>
        }
        else if (count > 1)
        {
            <div class="product-offer mb-30" style="height: 200px;">
                <img class="img-fluid" src="@item.ImageUrl" alt="">
                <div class="offer-text">
                    <h6 class="text-white text-uppercase">@item.Title</h6>
                    <h3 class="text-white mb-3">@item.SubTitle</h3>
                    <a href="" class="btn btn-primary">Teklife Git</a>
                </div>
            </div>
        }
        

    }

</div>