@model List<ResultCommentDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Yorum Listesi</h4>
                <div class="bs-example" data-example-id="bordered-table">
                    <form action="/" method="post">
                        <table class="table table-bordered">
                            <thead>
                                    <th>Kullanıcı</th>
                                    <th>Yorum</th>
                                    <th>Tarih</th>
                                    <th>Durum</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.NameSurname</td>
                                        <td>@item.CommentDetail</td>
                                        <td>@item.CreatedDate.ToShortDateString()</td>
                                        <td>@item.Status</td>
                                        <td><a href="/Admin/Comment/DeleteComment/@item.UserCommentId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/Admin/Comment/UpdateComment/@item.UserCommentId" class="btn btn-success">Güncelle</a></td>

                                    </tr>
                                }
                            </tbody>
                        </table>

                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

