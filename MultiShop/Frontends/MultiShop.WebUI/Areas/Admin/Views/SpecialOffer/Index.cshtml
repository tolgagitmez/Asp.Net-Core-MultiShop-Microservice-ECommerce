@model List<ResultSpecialOfferDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Kategori Listesi</h4>
                <p>Kategoriyle ilgili işlemlerinizi aşağıdaki tablo üzerinden gerçekleştirebilirsini</p>
                <div class="bs-example" data-example-id="bordered-table">
                    <form action="/" method="post">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Teklif Başlığı</th>
                                    <th>Teklif Alt Başlığı</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th scope="row">@item.SpecialOfferId</th>
                                        <td>@item.Title</td>
                                        <td>@item.SubTitle</td>
                                        <td><a href="/Admin/SpecialOffer/DeleteSpecialOffer/@item.SpecialOfferId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/Admin/SpecialOffer/UpdateSpecialOffer/@item.SpecialOfferId" class="btn btn-success">Güncelle</a></td>

                                    </tr>
                                }
                            </tbody>
                        </table>

                    </form>
                    <td><a href="/Admin/SpecialOffer/CreateSpecialOffer/" class="btn btn-success">Yeni Teklif Girişi</a></td>
                </div>
            </div>
        </div>
    </div>
</section>

